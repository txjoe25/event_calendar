<div class="w3-half w3-padding">
<h2>Add Event</h2>
<form class="w3-container" action='/events' method='post'>
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<label class="w3-label">Name:</label><input class="w3-input w3-animate-input w3-border" style="width:30%" type="text" name="event[name]" value="<%= @event.name %>"><br>
	<label class="w3-label">Date:</label><input class="w3-input w3-animate-input w3-border" style="width:30%" type="date" name="event[date]" value="<%= @event.date.strftime("%Y-%m-%d") %>"><br>
	<label class="w3-label">City:</label><input class="w3-input w3-animate-input w3-border" style="width:30%" type="text" name="event[city]" value="<%= @event.city %>">
	<select name="state" class="w3-select w3-text-green" style="width:30%">
		<% us_states.each do |s| %>
		<option <%= 'selected' if s == current_user.state %>><%= s %></option>
		<% end %>
	</select><br>
	<br>
	<input class="w3-input-btn" type="submit" value="Add Event">
</form>
</div>